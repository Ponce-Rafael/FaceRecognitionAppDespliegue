<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF1C1C1E">

        <!-- Fondo imagen gimnasio -->

        <!-- Header -->
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            android:src="@drawable/gym" />

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingHorizontal="12dp"
            android:background="@android:color/transparent">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:src="@drawable/menu"
                android:contentDescription="Menú"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/btnCarrito"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@drawable/cart"
                android:tint="#ffffffff"
                android:contentDescription="Carrito"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/tvLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnMenu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="FITNESS.COM"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Barra de búsqueda -->
        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/header"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_search"
            android:hint="Buscar..."
            android:paddingHorizontal="16dp"
            android:drawableStart="@drawable/search"
            android:drawablePadding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:inputType="text" />

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/tabCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etBuscar"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/tabSupplements"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suplementos"
                android:textColor="#FF4444"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/tabAccessories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accesorios"
                android:textColor="#AAAAAA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Lista de productos -->
        <HorizontalScrollView
            android:id="@+id/scrollProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabCategorias"
            android:layout_marginTop="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/containerProductos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="20dp">
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Menú inferior -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/nav_end"
            android:elevation="6dp"
            android:gravity="center"
            android:weightSum="4"
            android:clipToPadding="false">

            <ImageButton
                android:id="@+id/btnNavHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:background="@android:color/transparent"
                android:tint="#FF4444" />

            <ImageButton
                android:id="@+id/btnNavFav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart"
                android:background="@android:color/transparent"
                android:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnNavCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/update"
                android:background="@android:color/transparent"
                android:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnNavPerfil"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/user"
                android:background="@android:color/transparent"
                android:tint="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

    <!-- MENÚ LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:menu="@menu/menu_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>
