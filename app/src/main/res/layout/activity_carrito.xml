<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ðŸ›’ Mi Carrito"
        android:textColor="#F6EAEA"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollCarrito"
        android:layout_width="match_parent"
        android:background="#333333"
        android:layout_height="0dp"
        android:layout_below="@id/tvTituloCarrito"
        android:layout_above="@id/txtTotal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/containerCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnFinalizarCompra"
        android:layout_marginBottom="8dp"
        android:text="Total: $0.00"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="end" />

    <Button
        android:id="@+id/btnFinalizarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Finalizar compra"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="#FF4444"
        android:layout_marginTop="10dp" />
</RelativeLayout>
